.form-container {
    flex-grow: 1;
}

.text-input-container {
    margin-left: 14px;
    margin-right: 14px;
    margin-top: 14px;
    margin-bottom: 14px;
    height: 32px;
}

.thumbnail-preview {
    width: 96px;
    height: 96px;
    margin-left: 14px;
    margin-right: 14px;
    margin-top: 14px;
    margin-bottom: 14px;
    border-top-left-radius: 4px;
    border-bottom-left-radius: 4px;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
    -unity-background-scale-mode: scale-to-fit;
}

.thumbnail-container {
    flex-grow: 1;
    align-items: center;
    justify-content: center;
    background-color: rgba(0, 0, 0, 0.08);
    margin-top: 14px;
}

.select-image-button {
    height: 32px;
    background-color: rgba(228, 228, 228, 0);
    padding-left: 14px;
    padding-right: 14px;
    border-left-color: rgba(255, 255, 255, 0.35);
    border-right-color: rgba(255, 255, 255, 0.35);
    border-top-color: rgba(255, 255, 255, 0.35);
    border-bottom-color: rgba(255, 255, 255, 0.35);
    -unity-font-style: bold;
}

.form-title-label {
    -unity-text-align: middle-left;
    -unity-font-style: bold;
    font-size: 14px;
    margin-bottom: 14px;
    margin-left: 14px;
    margin-right: 14px;
    margin-top: 14px;
    white-space: normal;
}

.project-input-label {
    margin-left: 14px;
    font-size: 14px;
}

.bottom-button {
    height: 42px;
    margin-left: 14px;
    margin-right: 14px;
    margin-top: 14px;
    margin-bottom: 14px;
    font-size: 14px;
    -unity-font-style: bold;
}
