.display-none {
    display: none;
}

.row {
    flex-direction: row;
}

.flex-container {
    display: flex;
    flex-direction: row;
}

.main {
    margin-top: 20px;
    padding-left: 20px;
    padding-right: 20px;
}

#buho {
    align-content: center;
    width: 45%;
    height: 275px;
    margin-top: 30px;
    padding: 20px;
    display: flex;
    align-items: flex-start;
    justify-content: flex-end;
}

.title {
    margin: 20px 0px;
    font-size: 18px;
}

.anchor {
    color: #2196F3;
    border-bottom-color: #2196F3;
    padding: 0px;
    margin: 0px;
    background-color: transparent;
    border-left-width: 0px;
    border-top-width: 0px;
    border-right-width: 0px;
    border-bottom-width: 1px;
}

Label {
    white-space: normal;
}

.footer {
    position: absolute;
    margin: 20px 10px 0px 10px;
    margin-top: 46%;
}

#privacyStatement {
    align-self: flex-start;
}